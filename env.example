# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/unsent
MONGODB_DB_NAME=unsent

# JWT Secret para autenticación
JWT_SECRET=tu-jwt-secret-muy-largo-y-seguro

# Cifrado de conversaciones (muy importante)
ENCRYPTION_SECRET=tu-clave-de-cifrado-muy-segura

# SMTP para magic links (opcional en desarrollo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# URL de la aplicación
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# RevenueCat Configuration
REVENUECAT_WEBHOOK_SECRET=tu-revenuecat-webhook-secret
NEXT_PUBLIC_REVENUECAT_API_KEY=tu-revenuecat-public-key
REVENUECAT_SECRET_KEY=tu-revenuecat-secret-key

